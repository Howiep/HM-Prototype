@model HeedeMoestrup.Models.PageHeader

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Detajler</h2>

<div>
    <h4>Side tekst</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b class="control-label col-md-2">Titel</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            <b class="control-label col-md-2">Side</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedView)
        </dd>
        <dt>
            <b class="control-label col-md-2">Tekst indhold</b>
        </dt>

        <dd>
            @Html.Raw(Model.PageHeaderText)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
