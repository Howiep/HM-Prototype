@model HeedeMoestrup.Models.Artist

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Slet kunstner</h2>

<h3>Er du sikker på at du vil slette denne?</h3>
<div>
    <h4>Kunstner</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Navn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Beksrivelse
        </dt>

        <dd>
            @Html.Raw(Model.Desc)
        </dd>

        <dt>
            Fremtrædende
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Featured)
        </dd>

        <dt>
            Udgivelser af H&M?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HMPublication)
        </dd>
        @if (Model.FilePaths.Any(f => f.FileType == HeedeMoestrup.Models.FileType.ArtistAvatar))
            {
            <dt>
                Photo
            </dt>
            <dd>
                <img src="~/images/@ViewBag.imgSrc" alt="" />
            </dd>
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
