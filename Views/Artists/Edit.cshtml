@model HeedeMoestrup.Models.Artist

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Rediger</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kunstner</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <b class="control-label col-md-2">Navn</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Beskrivelse</b>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Desc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Fremtrædende?</b>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Featured)
                    @Html.ValidationMessageFor(model => model.Featured, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Udgivelser af H&M?</b>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.HMPublication)
                    @Html.ValidationMessageFor(model => model.HMPublication, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @if (Model.FilePaths.Any(f => f.FileType == HeedeMoestrup.Models.FileType.ArtistAvatar))
            {
                <b class="control-label col-lg-2">Photo</b>
                <img  src="~/images/@ViewBag.imgSrc" alt="" />
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Artist" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to list", "Index")
</div>
